{% extends 'base.html.twig' %}

{% block title %}Symfony Blog{% endblock %}

{% block body %}
    <hr>
        {% for post in posts %}
            <a href="{{ path('post_show', {'id': post.id}) }}"><h5>{{ post.postHead }}</h5></a>
            <p>{{ post.postedAt|date("d.m.Y h:i:s A") }}</p>
            <p>{{ post.shortBodyCheat }}</p>
            <hr>
        {% endfor %}

    <a href="{{ path('show_all') }}">View all posts</a>
    <hr>
<div class="example-wrapper">

</div>

{% endblock %}